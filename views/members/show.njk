{% extends "layout.njk" %}

{% block content %}

<head><title>Gym Manager - Members</title></head>

<div class="card">
    <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover "></section>
    
    <section class="details">
        
        <h3>Details</h3>
        
        <div class="item">
            <div>member</div>
            <div>{{member.name}}</div>
        </div>
        
        <div class="item">
            <div>email</div>
            <div>{{member.email}}</div>
        </div>

        <div class="item">
            <div>birthday</div>
            <div>{{member.birth}}</div>
        </div>
        
        <div class="item">
            <div>gender</div>
            <div>{{ "Male" if member.gender == "M" else "Female"}}</div>
        </div>
        
        <div class="item">
            <div>blood type</div>
            <div>{{member.blood}}</div>
        </div>
        
        <div class="item">
            <div>weight (Kg)</div>
            <div>{{member.weight}}</div>
        </div>

        <div class="item">
            <div>height (cm)</div>
            <div>{{member.height}}</div>
        </div>

        <a href="/members/{{ member.id}}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}
