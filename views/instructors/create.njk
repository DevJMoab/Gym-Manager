{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/3652543/500x500) no-repeat center center / cover "></section>
    
    <section class="details">
        
        <h3>New Instructor</h3>

            <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>
        
        <div class="item">
            <div>Instructor</div>
            <div>
                <input type="text" name="" placeholder="Instructor's name">
            </div>
        </div>
        
        <div class="item">
            <div>Birthday</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>
        
        <div class="item ">
            <div>Gender</div>
            <div>
                <span><input type="radio" name="gender" value="M">Male</span>
                <span><input type="radio" name="gender" value="F">Female</span>
                <span><input type="radio" name="gender" value="N">Not Binary</span> 

            </div>
        </div>
        
        <div class="item">
            <div>Attendance</div>
                <div>
                    <input type="text" name="services" placeholder="Separate services provided by commas">
                </div>
            </div>
        </div>

        <button type="submit">Save</button>

    </section>
</form>

{% endblock content %}
